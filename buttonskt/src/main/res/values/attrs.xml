<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ButtonsKtView">
        <!-- Configuration -->
        <attr name="bkt_isEnabled" format="boolean" />
        <attr name="bkt_isRippleEffectEnabled" format="boolean" />

        <!-- Icon styles -->
        <attr name="bkt_iconResource" format="enum">
            <enum name="fa_address_book_solid" value="0" />
            <enum name="fa_address_card_solid" value="1" />
            <enum name="fa_calculator_solid" value="2" />
            <enum name="fa_xray_solid" value="3" />
        </attr>

        <attr name="bkt_iconDrawable" format="reference" />
        <attr name="bkt_iconTint" format="color" />
        <attr name="bkt_disabledIconTint" format="color" />
        <attr name="bkt_iconArea" format="dimension" />

        <!-- Icon Margin -->
        <attr name="bkt_iconMargin" format="dimension" />
        <attr name="bkt_iconMarginLeft" format="dimension" />
        <attr name="bkt_iconMarginTop" format="dimension" />
        <attr name="bkt_iconMarginRight" format="dimension" />
        <attr name="bkt_iconMarginBottom" format="dimension" />

        <!-- Icon Padding -->
        <attr name="bkt_iconPadding" format="dimension" />
        <attr name="bkt_iconPaddingLeft" format="dimension" />
        <attr name="bkt_iconPaddingTop" format="dimension" />
        <attr name="bkt_iconPaddingRight" format="dimension" />
        <attr name="bkt_iconPaddingBottom" format="dimension" />

        <!-- Text Styles -->
        <attr name="bkt_text" format="string" />
        <attr name="bkt_textSize" format="dimension" />
        <attr name="bkt_textColor" format="color" />
        <attr name="bkt_disabledTextColor" format="color" />
        <attr name="bkt_textAllCaps" format="boolean" />

        <!-- https://developer.android.com/reference/android/R.attr#textStyle -->
        <attr name="bkt_textStyle" format="enum">
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="normal" value="0" />
        </attr>

        <!--https://developer.android.com/reference/android/R.attr#gravity-->
        <attr name="bkt_textGravity" format="enum">
            <enum name="bottom" value="50" />
            <enum name="center" value="11" />
            <enum name="center_horizontal" value="1" />
            <enum name="center_vertical" value="10" />
            <enum name="clip_horizontal" value="8" />
            <enum name="clip_vertical" value="80" />
            <enum name="end" value="800005" />
            <enum name="fill" value="77" />
            <enum name="fill_horizontal" value="7" />
            <enum name="fill_vertical" value="70" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
            <enum name="start" value="800003" />
            <enum name="top" value="30" />
        </attr>

        <!-- https://developer.android.com/reference/android/R.attr#textAlignment -->
        <attr name="bkt_textPosition" format="enum">
            <enum name="left" value="9" />
            <enum name="top" value="10" />
            <enum name="right" value="11" />
            <enum name="bottom" value="12" />
            <enum name="center" value="13" />
        </attr>

        <!-- Colors -->
        <attr name="bkt_defaultBackgroundColor" format="color" />
        <attr name="bkt_focusedBackgroundColor" format="color" />
        <attr name="bkt_disabledBackgroundColor" format="color" />

        <!-- Border -->
        <attr name="bkt_borderWidth" format="dimension" />
        <attr name="bkt_defaultBorderColor" format="color" />
        <attr name="bkt_focusedBorderColor" format="color" />
        <attr name="bkt_disabledBorderColor" format="color" />

        <!-- Padding -->
        <attr name="bkt_padding" format="dimension" />
        <attr name="bkt_paddingLeft" format="dimension" />
        <attr name="bkt_paddingTop" format="dimension" />
        <attr name="bkt_paddingRight" format="dimension" />
        <attr name="bkt_paddingBottom" format="dimension" />

        <!-- Radius -->
        <attr name="bkt_radius" format="dimension" />
        <attr name="bkt_radiusTopLeft" format="dimension" />
        <attr name="bkt_radiusTopRight" format="dimension" />
        <attr name="bkt_radiusBottomLeft" format="dimension" />
        <attr name="bkt_radiusBottomRight" format="dimension" />
    </declare-styleable>
</resources>